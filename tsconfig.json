{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist/js",
        "rootDir": "./src",
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}